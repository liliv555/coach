<div class="navbar-container">
    <div id="navbar">
        <div id="open-nav" class="toggle-icon">
            <i class="fas fa-bars"></i>
        </div>
        <div id="close-nav" class="toggle-icon">
            <i class="fas fa-times"></i>
        </div>
        <div class="navbar-links">
            <ul class="nav-ul">
                <li class="nav-li">
                    <a class="navlink" href="#home"><%= t("navbar.home").upcase %></a>
                </li>
                <li class="nav-li">
                    <a class="navlink" href="#about"><%= t("navbar.about").upcase %></a>
                </li>
                <li class="nav-li">
                    <a class="navlink" href="#training"><%= t("navbar.training").upcase %></a>
                </li>
                <li class="nav-li">
                    <a class="navlink" href="#coaching"><%= t("navbar.coaching").upcase %></a>
                </li>
                <li class="nav-li">
                    <a class="navlink" href="#contact"><%= t("navbar.contact").upcase %></a>
                </li>
            </ul>
        </div>
        <div class="language-switch">
            <div class="dropdown dropdown-10">
                <span class="language-icon"><i class="fas fa-globe"></i></span>
                <ul class="dropdown_menu dropdown_menu--animated dropdown_menu-10">
                    <li class="dropdown_item-1"><%= link_to (image_tag("eng.png")), { :locale=>'en' } %></li>
                    <li class="dropdown_item-2"><%= link_to (image_tag("hun.png")), { :locale=>'hu' } %></li>
                </ul>
            </div>
        </div>
    </div>
</div>
