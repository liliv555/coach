            </div>
            <div class="section-picture">
                <%# <%= image_tag "about.jpg" %> %>
            </div>
        </div>
    </div>
    <div class="section right">
        <div id="training">
            <div class="section-content">
                <div class="title">
                    <h2><%= t("training.title") %></h2>
                </div>
                <p><%= t("training.content") %></p>
            </div>
        </div>
    </div>
    <div class="section left">
        <div id="coaching">
            <div class="section-content">
                <div class="title">
                    <h2><%= t("coaching.title") %></h2>
                </div>
                <p><%= t("coaching.content") %></p>
            </div>
        </div>
    </div>
</div>